# Pylint configuration for Unitree WebRTC Connect
# Includes custom rules to prevent double-locking anti-patterns

[MASTER]
# Add custom checkers
load-plugins=pylint.extensions.check_elif,
             pylint.extensions.bad_builtin,
             pylint.extensions.docparams,
             pylint.extensions.for_any_all,
             pylint.extensions.set_membership,
             pylint.extensions.code_style,
             pylint.extensions.typing,
             pylint.extensions.redefined_variable_type

[MESSAGES CONTROL]
# Enable specific warnings
enable=useless-suppression,
       deprecated-pragma,
       use-symbolic-message-instead

# Custom message for double-locking pattern
# Note: This requires manual code review as pylint doesn't support regex-based custom rules
# See .agent-os/standards/code-review-checklist.md for manual review process

[BASIC]
# Good variable names
good-names=i,j,k,ex,Run,_,x,y,z,vx,vy,vz,ip,id

[FORMAT]
# Maximum line length
max-line-length=100

# String quote consistency
string-quote=single-avoid-escape

[DESIGN]
# Maximum number of arguments for function / method
max-args=10

# Maximum number of attributes for a class
max-attributes=30

[TYPECHECK]
# List of members which are set dynamically and missed by pylint inference
generated-members=cv2.*,numpy.*,pyaudio.*

[SIMILARITIES]
# Minimum lines number of a similarity
min-similarity-lines=10

